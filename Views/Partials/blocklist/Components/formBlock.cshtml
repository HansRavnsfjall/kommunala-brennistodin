@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Forms.Web

@{
    var el = Model?.Content;
    var heading = el?.Value<string>("heading");
    var intro = el?.Value<IHtmlEncodedString>("intro");
    var formId = el?.Value<Guid?>("formPicker");
}

<section class="section form-block">
    <div class="container">
    @if (!string.IsNullOrWhiteSpace(heading))
    {
        <h2>@heading</h2>
    }
    @if (intro != null)
    {
        <div class="intro">@intro</div>
    }
    @if (formId.HasValue)
    {
        @await Component.InvokeAsync("RenderForm", new {
            formId = formId.Value,
            theme = "default",
            includeScripts = false
        })
    }
    else
    {
        <p class="text-muted"><em>No form selected.</em></p>
    }
    </div>
</section>
