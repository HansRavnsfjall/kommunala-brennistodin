{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "Global": {
        "Smtp": {
          "From": "no-reply@local.test",
          "DeliveryMethod": "SpecifiedPickupDirectory",
          "PickupDirectoryLocation": "App_Data/maildrop"
        }
      },
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      }
    }
  }
}
