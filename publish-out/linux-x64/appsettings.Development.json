{
  "$schema": "appsettings-schema.json",

  "Serilog": {
    "MinimumLevel": { "Default": "Information" },
    "WriteTo": [
      { "Name": "Async", "Args": { "configure": [ { "Name": "Console" } ] } }
    ]
  },

  "Umbraco": {
    "CMS": {
      "Global": {
        "Smtp": {
          "From": "no-reply@local.test",
          "DeliveryMethod": "SpecifiedPickupDirectory",
          "PickupDirectoryLocation": "App_Data/maildrop"
        }
      },

      "Content": {
        "MacroErrors": "Throw"
      },

      "Hosting": {
        "Debug": true
      },

      "Security": {
        "BackOfficeHost": "http://127.0.0.1:5215"
      },
      "WebRouting": {
        "UmbracoApplicationUrl": "http://127.0.0.1:5215/"
      }
    }
  }
}
